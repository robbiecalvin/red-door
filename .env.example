# Backend
JWT_SECRET=change-me
PORT=3000
# Optional: PostgreSQL connection string for scalable auth/chat/profile/media persistence.
# If omitted, backend falls back to local JSON file storage.
DATABASE_URL=
# Optional alias for hosted Neon setups (used if DATABASE_URL is empty).
NEON_DATABASE_URL=
# Optional: set true when your Postgres provider requires TLS.
DATABASE_SSL=false
# Optional: fail fast at startup unless DATABASE_URL or NEON_DATABASE_URL is set.
REQUIRE_DATABASE=false

# Optional: comma-separated origin allowlist for browser/native webview requests
CORS_ALLOWED_ORIGINS=capacitor://localhost,http://localhost,http://127.0.0.1,ionic://localhost

# Frontend build-time runtime endpoints
# Default in this repo's dev/build scripts is __local__ (fully browser-local mode).
# Set /api (or a full backend origin) to use backend mode.
# Example: DUALMODE_API_BASE_PATH=https://api.example.com
DUALMODE_API_BASE_PATH=__local__

# Optional explicit websocket URL.
# Default in this repo's dev/build scripts is __disabled__ for static mode.
# Use /ws or wss://... when running backend realtime.
# Example: DUALMODE_WS_URL=wss://api.example.com/ws
DUALMODE_WS_URL=__disabled__

# Optional defaults used by map center
DUALMODE_DEFAULT_CENTER_LAT=40.7484
DUALMODE_DEFAULT_CENTER_LNG=-73.9857
